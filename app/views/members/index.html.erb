
<div class="member-container">
  <div class="member-titre">
    <h1>L'équipe Planète Alfa</h1>
  </div>
  <div class="piece-banner-info-content maintenance-content">
    <div class="piece-info-banner maintenance">
      <h6>⚠️🚧👷 Site actuellement en maintenance 👷🚧⚠️<br></h6>
    </div>
  </div>

  <div class="grid-com">
    <% @members.each do |member| %>
      <div class="member-card">
        <div class="member-card-text">
          <p class="member-name"><strong><%= member.prenom %> <%= member.nom %></strong></p>
        </div>

        <div class="member-photo">
          <%= cl_image_tag member.photo.key, height: 140, width: 140, crop: :fill %>
        </div>
        <div class="member-card-text">
          <p><strong><%= member.job %></strong></p>
        </div>
        <div class="member-card-description">
          <p><%= member.description %></p>
        </div>
      </div>

    <% end %>
  </div>
</div>
