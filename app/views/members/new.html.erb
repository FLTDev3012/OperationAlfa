<div class="form-container">

  <div class="form-titre">
    <h1>ajoutez votre nouvel recrue</h1>
  </div>

  <div class="form-formulaire">
    <%= simple_form_for @member do |f| %>
      <%= f.input :nom, placeholder: 'Nom' %>
      <%= f.input :prenom, placeholder: 'Prenom' %>
      <%= f.input :job, placeholder: 'Place dans l entreprise' %>
      <p>Description (150 caract√©res max)</p>
      <%= f.text_area :description, placeholder: 'Description', class: "com-textarea" %>
      <%= f.input :photo, as: :file %>
      <div class="form-input">
        <%= f.button :submit, value: 'Validation' %>
      </div>
    <% end %>
  </div>

</div>
