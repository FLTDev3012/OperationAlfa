<div class="piece-container">

  <div class="piece-titre">
    <h1>Nos pieces</h1>
  </div>

  <div class="piece-banner-info-content">
    <div class="piece-info-banner">
      <h6>Toutes nos pièces sont acuellement disponible en magasin</h6>
    </div>
  </div>

  <div class="piece-index">
    <% @pieces.each do |piece| %>
      <%= link_to piece_path(piece), class: "link-card" do%>
        <div class="piece-card">
          <%= cl_image_tag piece.photo.key, height: 200, width: 280, crop: :fill, class: "index-img piece-margin-b" %>
          <p> <%= piece.nom %> </p>
          <p class="piece-descrip">
            <%= piece.description.slice(0, 97) %>
            <% if piece.description.length > 97 %>
              ...
            <% end %>
          </p>
          <p class="piece-prix"> <%= sprintf("%.2f", piece.prix) %> €</p>
          <div class="index-card-btn little-font">
            <p>Détail</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
